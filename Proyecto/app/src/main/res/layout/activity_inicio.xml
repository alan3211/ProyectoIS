<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/logoand">

        <TextView
            android:id="@+id/xmensaje"
            android:text="@string/desc"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:fontFamily="Arial"
            android:paddingLeft="10dp"
            android:paddingTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/xiniciar"
            android:text="@string/welcome"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:background="#B9F21C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ximagen"
        android:background="@drawable/texto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/xmensaje"
        android:layout_above="@+id/xiniciar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>